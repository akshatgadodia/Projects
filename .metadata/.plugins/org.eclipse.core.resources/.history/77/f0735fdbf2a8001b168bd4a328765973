package decisionMaker;

import java.util.Random;   

public class Coin {
	private String choice1 = "Heads";
	private String choice2 = "Tails";
	private int c1_count=0;
	private int c2_count=0;
	
	public int getC1_count() {
		return c1_count;
	}
	public void updateC1_count() {
		this.c1_count++;
		System.out.println(c1_count+"");
	}
	public int getC2_count() {
		return c2_count;
	}
	public void updateC2_count() {
		this.c2_count++;
		System.out.println(c2_count+"");
	}
	public String getChoice1() {
		return choice1;
	}
	public String getChoice2() {
		return choice2;
	}
	public void setChoice1(String choice1) {
		this.choice1 = choice1;
	}
	public void setChoice2(String choice2) {
		this.choice2 = choice2;
	}
	public String tossCoin() {
		Random random = new Random(); 
		int x = random.nextInt(2);   
		if(x==1)
			{
				updateC1_count();
				return choice1;
			}
		else
			{
				updateC2_count();
				return choice2;
			}
				
	}
}
